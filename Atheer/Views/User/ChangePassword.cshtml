@model string

@{
    ViewData["Title"] = "Change Password";
}

<form asp-controller="User" asp-action="ChangePasswordPost" method="post">
    <div class="form-group row">
        <label for="OldPassword" class="col-sm-2 col-form-label">Old Password: </label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="OldPassword" name="OldPassword" maxlength="32" minlength="8">
        </div>
    </div>
    <div class="form-group row">
        <label for="OldPassword" class="col-sm-2 col-form-label">New Password: </label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="NewPassword" name="NewPassword" maxlength="32" minlength="8">
        </div>
    </div>
    <div class="form-group row">
        <label for="NewPasswordSecondTime" class="col-sm-2 col-form-label">Repeat New Password: </label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="NewPasswordSecondTime" name="NewPasswordSecondTime" maxlength="32" minlength="8">
        </div>
    </div>
    <button name="button" value="change" type="submit" class="btn btn-danger">Change</button>
    <button name="button" value="cancel" type="submit" class="btn btn-secondary">Cancel</button>
</form>
